{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "../../node_modules/@subql/types-core/dist/global.d.d.ts",
    "../../node_modules/@subql/types/dist/global.d.ts",
    "./custom-global.d.ts"
, "deps.ts"  ],
  "exclude": ["node_modules", "dist"]
}
