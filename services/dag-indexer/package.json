{
  "name": "dag-indexer",
  "version": "0.0.1",
  "description": "SubQuery indexer for indexing DAG nodes from Substrate blockchain",
  "main": "dist/index.js",
  "scripts": {
    "build": "subql codegen && subql build",
    "codegen": "subql codegen",
    "start:docker": "docker-compose pull && docker-compose up --remove-orphans",
    "dev": "subql-node --dev",
    "start": "subql-node -f . --historical false --batch-size 1 --worker-threads 1 --concurrent-blocks 1",
    "start:slow": "subql-node -f . --historical false --batch-size 5 --worker-threads 1 --concurrent-blocks 1 --fetch-batch-size 3",
    "start:rate-limited": "subql-node -f . --historical false --batch-size 3 --worker-threads 1 --concurrent-blocks 1 --fetch-batch-size 50 --timeout 60000",
    "start:unfinalized": "subql-node -f . --historical false --unfinalized-blocks --batch-size 1 --worker-threads 1 --concurrent-blocks 1",
    "start:unfinalized-slow": "subql-node -f . --historical false --unfinalized-blocks --batch-size 5 --worker-threads 1 --concurrent-blocks 1 --fetch-batch-size 3",
    "prepack": "rm -rf dist && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "homepage": "https://github.com/subquery/subql-starter",
  "repository": "github:subquery/subql-starter",
  "files": [
    "dist",
    "schema.graphql",
    "project.ts"
  ],
  "author": "Auto Files Gateway Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@polkadot/api": "^10.11.2",
    "@subql/types": "^3.14.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.10",
    "@types/text-encoding": "^0",
    "jest": "^30.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@autonomys/auto-dag-data": "^1.4.31",
    "@polkadot/util": "^13.5.3",
    "@subql/cli": "^6.0.2",
    "@subql/common-substrate": "^4.3.7",
    "@subql/node": "^5.10.0",
    "@subql/substrate-wasm-processor": "^1.0.0",
    "@subql/types": "^3.12.1",
    "dotenv": "^17.2.0",
    "text-encoding": "^0.7.0",
    "util": "^0.12.5"
  },
  "resolutions": {
    "ipfs-only-hash": "2.0.1",
    "ipfs-unixfs": "6.0.9"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
